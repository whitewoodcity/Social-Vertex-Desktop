<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cn.net.polyglot.controller.ChartPaneController"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@/css/chart_view.css"/>
    </stylesheets>
    <style>
        -fx-background-color:#F5F5F5;
        -fx-border-color:#F5F5F5;
        -fx-border-width:0;
    </style>
    <top>
        <!--建议信息 如人名啥的-->
        <GridPane>
            <prefHeight>50</prefHeight>
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <style>
                -fx-background-color:transparent;
                -fx-border-color:transparent;
                -fx-border-width:0;
            </style>

            <Text fx:id="name">
                张三
                <font>
                    <Font>
                        <size>20</size>
                    </Font>
                </font>
                <GridPane.rowIndex>0</GridPane.rowIndex>
                <GridPane.columnIndex>0</GridPane.columnIndex>
            </Text>
        </GridPane>
    </top>
    <center>
        <!--聊天面板加底部输入框-->
        <SplitPane dividerPositions="0.8,0.2">
            <orientation>
                <Orientation fx:value="VERTICAL"/>
            </orientation>
            <style>
                -fx-background-color:#F5F5F5;
                -fx-border-color:#F5F5F5;
                -fx-border-width:0;
            </style>
            <!--信息面板-->
            <StackPane fx:id="chart_pane">
                <ListView fx:id="msgList">
                </ListView>
            </StackPane>
            <BorderPane>
                <!--工具条-->
                <top>
                    <GridPane>
                        <prefHeight>25</prefHeight>
                        <padding>
                            <Insets>
                                <left>15</left>
                                <right>15</right>
                                <top>5</top>
                                <bottom>5</bottom>
                            </Insets>
                        </padding>
                        <hgap>10</hgap>
                        <StackPane styleClass="clicked">
                            <GridPane.rowIndex>0</GridPane.rowIndex>
                            <GridPane.columnIndex>0</GridPane.columnIndex>
                            <prefWidth>25</prefWidth>
                            <ImageView>
                                <fitHeight>25</fitHeight>
                                <fitWidth>25</fitWidth>
                                <Image url="@/icons/expression_32.png"/>
                            </ImageView>
                        </StackPane>
                        <StackPane styleClass="clicked">
                            <GridPane.rowIndex>0</GridPane.rowIndex>
                            <GridPane.columnIndex>1</GridPane.columnIndex>
                            <prefWidth>25</prefWidth>
                            <ImageView>
                                <fitHeight>20</fitHeight>
                                <fitWidth>20</fitWidth>
                                <Image url="@/icons/cutting_32.png"/>
                            </ImageView>
                        </StackPane>

                    </GridPane>
                </top>
                <!--编辑框-->
                <center>
                    <TextArea fx:id="msgEditor" styleClass="editorArea">
                        <minHeight>150</minHeight>
                        <wrapText>true</wrapText>
                        <padding>
                            <Insets top="10" left="10"/>
                        </padding>
                        <font>
                            <Font>
                                <size>16</size>
                            </Font>
                        </font>
                    </TextArea>
                </center>
                <!--发送按钮-->
                <bottom>
                    <VBox>
                        <alignment>
                            <Pos fx:value="CENTER_LEFT"/>
                        </alignment>
                        <padding>
                            <Insets topRightBottomLeft="5"/>
                        </padding>
                        <HBox>
                            <alignment>
                                <Pos fx:value="CENTER_RIGHT"/>
                            </alignment>
                            <padding>
                                <Insets right="20"/>
                            </padding>
                            <prefHeight>20</prefHeight>
                            <Button>
                                发送
                            </Button>
                        </HBox>
                    </VBox>
                </bottom>
            </BorderPane>
        </SplitPane>
    </center>
</BorderPane>
